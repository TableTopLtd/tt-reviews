<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="menus-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/MenusDS</non-jta-data-source>

        <class>si.fri.tabletop.menus.models.Menu</class>
        <class>si.fri.tabletop.menus.models.Drink</class>
        <class>si.fri.tabletop.menus.models.Ingredient</class>
        <class>si.fri.tabletop.menus.models.Food</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source"
                      value="sql-scripts/init-menus.sql"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
